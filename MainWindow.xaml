<Window x:Class="Catboob_GGStream.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catboob (GGStream)" Height="350" Width="300" ShowInTaskbar="False" SnapsToDevicePixels="True" WindowStyle="ThreeDBorderWindow" Closing="Window_Closing" MinWidth="300" Foreground="White" Topmost="False">
    <Grid>
        
        <Rectangle Height="64" HorizontalAlignment="Stretch" Name="rectangle1" Stroke="#FF00BCD4" VerticalAlignment="Top" Width="Auto" Fill="#FF00BCD4"></Rectangle>
        
        <ListView Name="actions_listview" RenderTransformOrigin="0,0" BorderThickness="0" Margin="0,64,0,0" HorizontalContentAlignment="Stretch">
            
            <ListView.ItemTemplate>
                
                <DataTemplate>
                    
                    <Grid>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Image Width="64" Height="64" Source="{Binding ImageSource}" Grid.Column="0" />
                        <TextBlock Text="{Binding ShortCut}" ClipToBounds="True" TextTrimming="CharacterEllipsis" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Button Width="64" Height="64" Grid.Column="2" />

                    </Grid>
                    
                </DataTemplate>
                
            </ListView.ItemTemplate>            
            
        </ListView>
        
    </Grid>
    
</Window>
