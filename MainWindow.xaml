<Window x:Class="Catboob_GGStream.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catboob (GGStream)" Height="350" Width="300" ShowInTaskbar="False" SnapsToDevicePixels="True" WindowStyle="ThreeDBorderWindow" Closing="Window_Closing" MinWidth="300" Foreground="White" Topmost="False">
    <Grid>
        
        <Rectangle Height="64" HorizontalAlignment="Stretch" Name="rectangle1" Stroke="#FF00BCD4" VerticalAlignment="Top" Width="Auto" Fill="#FF00BCD4"></Rectangle>
        
        <ListView Name="actions_listview" RenderTransformOrigin="0,0" BorderThickness="0" Margin="0,64,0,0">
            
            <ListView.ItemTemplate>
                
                <DataTemplate>
                    
                    <WrapPanel>

                        <Image Width="64" Height="64" Source="{Binding ImageSource}"/>
                        <TextBlock Text="{Binding ShortCut}"/>
                        <Button Width="64" Height="64"/>
                        
                    </WrapPanel>
                    
                </DataTemplate>
                
            </ListView.ItemTemplate>            
            
        </ListView>
        
    </Grid>
    
</Window>
