<Window x:Class="Catboob_GGStream.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catboob (GGStream)" Height="400" Width="300" ShowInTaskbar="False" SnapsToDevicePixels="True" WindowStyle="ThreeDBorderWindow" Closing="Window_Closing" MinWidth="300" Foreground="White" Topmost="False" Background="#FF00BCD4">
    <Grid>

        <Grid Height="64" HorizontalAlignment="Stretch" Name="rectangle1" VerticalAlignment="Top" Width="Auto">
                
            <Button Width="48" Height="48" VerticalAlignment="Center" BorderThickness="0" Padding="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="0,8,8,8" HorizontalAlignment="Left" Grid.Column="0">
                <Image Name="menu_button" Width="24" Height="24" VerticalAlignment="Center" />
            </Button>

            <TextBlock Name="app_title" VerticalAlignment="Center" FontWeight="Medium" FontSize="20" ClipToBounds="True" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" Grid.Column="1" Margin="72,0,0,0" />

            <Button Width="48" Height="48" VerticalAlignment="Center" BorderThickness="0" Padding="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="8,8,0,8" HorizontalAlignment="Right" Grid.Column="2">
                <Image Name="menu_more_button" Width="24" Height="24" VerticalAlignment="Center" />
            </Button>

        </Grid>
        
        <!-- The Padding=-1 is to remove the 1px border around the list view. -->
        <ListView Name="actions_listview" RenderTransformOrigin="0,0" BorderThickness="0" Margin="0,64,0,0" HorizontalContentAlignment="Stretch" Padding="-1" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            
            <ListView.ItemTemplate>
                
                <DataTemplate>
                    
                    <Grid>

                        <Ellipse Width="56" Height="56" Margin="8,0,0,0" Grid.Column="0" HorizontalAlignment="Left">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding ImageSource}" />
                            </Ellipse.Fill>
                        </Ellipse>
                        
                        <TextBlock Text="{Binding ShortCut}" ClipToBounds="True" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="72,0,0,0" Grid.Column="1" FontWeight="Medium" FontSize="14" />

                        <Button Width="48" Height="48" VerticalAlignment="Center" BorderThickness="0" Padding="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="8,8,0,8" HorizontalAlignment="Right" Grid.Column="2">
                            <Image Width="24" Height="24" VerticalAlignment="Center" Source="{Binding MoreImageSource}" />
                        </Button>

                    </Grid>
                    
                </DataTemplate>
                
            </ListView.ItemTemplate>
            <ListView.BorderBrush>
                <SolidColorBrush />
            </ListView.BorderBrush>
        </ListView>
        
    </Grid>
    
</Window>
